<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_model_service_quote_submit_before">
        <observer name="fidesio_donate_donatefee" instance="Fidesio\DonateService\Observer\SalesModelServiceQuoteSubmitBefore" />
    </event>
    <event name="checkout_cart_product_add_after">
        <observer name="add_donatefee" instance="Fidesio\DonateService\Observer\Cart\Item\AddDonateFee" />
    </event>
    <event name="sales_quote_remove_item">
        <observer name="remove_donatefee" instance="Fidesio\DonateService\Observer\Cart\Item\RemoveDonateFee" />
    </event>
    <event name="checkout_submit_all_after">
        <observer name="fidesio_checkout_submit_all_after" instance="Fidesio\DonateService\Observer\OrderObserver" />
    </event>

</config>